---
import type { ImageMetadata } from 'astro'
import { Image as AstroImage } from 'astro:assets';

interface Props {
    bgImage?: ImageMetadata;
    title: string;
    subtitle: string;
    image?: ImageMetadata;
    reverse?: boolean;
};

const { bgImage, title, subtitle, image, reverse = false } = Astro.props
---
<section class="bg-white relative overflow-hidden">
    {bgImage && <AstroImage src={bgImage} alt="" class="object-cover absolute inset-0 w-full h-full z-0 brightness-35 blur-sm scale-150" />}
    <div class={`relative flex ${reverse ? 'sm:flex-row-reverse' : 'sm:flex-row'} flex-col items-center justify-center gap-4 max-w-screen-lg mx-auto p-6 z-10 text-white`}>
        <div class="basis-3/5">
            <h5 class="font-chelsea text-primary text-[25px]">{title}</h5>
            <h6 class="font-chelsea text-primary text-[25px]">{subtitle}</h6>
            <slot />
        </div>
        <div class="basis-2/5">
            {image && <AstroImage src={image} alt="" />}
        </div>
    </div>
</section>
