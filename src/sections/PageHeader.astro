---
import ButtonLink from '../components/ButtonLink.astro';

interface Props {
    title: string;
    subtitle: string;
    button: {
        text: string;
        url: string;
    };
}

const { title, subtitle, button } = Astro.props;
---
<section class="bg-white">
    <div class="flex flex-col items-center justify-center gap-4 max-w-screen-md mx-auto p-6">
        <h2 class="text-[56px] text-center leading-tight text-primary txt-shadow">{title}</h2>
        <h6 class="text-[20px] text-center leading-tight font-museo">{subtitle}</h6>
        <slot />
        <ButtonLink href={button.url} label={button.text} type="primary" ariaLabel={button.text} />
    </div>
</section>
