---
interface Props {
    title: string;
    subtitle: string;
    button: {
        text: string;
        url: string;
    };
}

const { title, subtitle, button } = Astro.props;
---
<section class="bg-white">
    <div class="flex flex-col items-center justify-center gap-4 max-w-[770px] mx-auto p-6">
        <h2 class="text-[56px] text-center leading-tight text-[#e3be05] txt-shadow">{title}</h2>
        <h6 class="text-[20px] text-center leading-tight font-museo">{subtitle}</h6>
        <slot />
        <a class="bg-[#e3be05] border-[#e3be05] py-2 px-4 border hover:border-solid hover:bg-white text-white hover:text-[#e3be05] font-survivor text-[14px]" href={button.url}>{button.text}</a>
    </div>
</section>
