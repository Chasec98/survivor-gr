---
import { Image } from 'astro:assets';

interface Props {
  sponsors: { name: string; image: ImageMetadata }[];
}

const { sponsors } = Astro.props;
---
<section>
  <div class="flex flex-col items-center justify-center gap-4 max-w-screen-lg mx-auto p-6">
    <h2 class="text-[56px] text-center leading-tight font-chelsea">Our Clients</h2>
    <div class="w-24 h-[1px] bg-neutral-300 mx-auto mb-8"></div>
    <div class="flex flex-wrap justify-center gap-12">
      {sponsors.map((sponsor) => (
        <div class="flex flex-col items-center justify-center">
          <Image class="pb-2" src={sponsor.image} alt={sponsor.name} width={100} height={100} />
        </div>
      ))}
    </div>
  </div>
</section>
