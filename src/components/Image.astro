---
import { Image as AstroImage } from 'astro:assets';
import type { ImageMetadata } from 'astro';
import bgImage from '../assets/images/bg-1.webp';

interface Props {
    image: ImageMetadata;
}

const { image } = Astro.props
---
<section class="bg-white relative overflow-hidden">
    <AstroImage src={bgImage} alt="" class="object-cover absolute inset-0 w-full h-full z-0 blur-sm scale-150" />
    <div class={`relative flex items-center justify-center gap-4 max-w-[1024px] mx-auto px-6 py-12 z-10 text-white`}>
        <AstroImage src={image} alt="">
    </div>
</section>
