---
import cn from '../utils/cn';

interface Props {
  backgroundColor?: 'white'
  backgroundImg?: {
    filename: string;
    alt: string;
  }
  class?: string;
}
const { backgroundColor = 'white', backgroundImg, class: className } = Astro.props;
---
<section class={cn([
  'relative',
  backgroundColor === 'white' && 'bg-white',
  className
])}>
  {
    backgroundImg && (
      <img src={backgroundImg.filename} alt={backgroundImg.alt} class="object-cover absolute inset-0 w-full h-full z-0 blur-sm scale-150" />
    )
  }
  <div class="relative flex items-center justify-center gap-4 max-w-screen-md mx-auto px-6 py-12 z-10 text-white">
    <slot />
  </div>
</section>