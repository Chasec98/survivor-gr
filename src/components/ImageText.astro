---
const { bgImage, title, subtitle, image, reverse = false } = Astro.props
---
<section class="bg-white relative overflow-hidden">
    <img src={bgImage} class="object-cover absolute inset-0 w-full h-full z-0 brightness-35 blur-sm scale-150">
    <div class={`relative flex ${reverse ? 'sm:flex-row-reverse' : 'sm:flex-row'} flex-col items-center justify-center gap-4 max-w-[1024px] mx-auto p-6 z-10 text-white`}>
        <div class="basis-3/5">
            <h5 class="font-chelsea text-[#e3be05] text-[25px]">{title}</h5>
            <h6 class="font-chelsea text-[#e3be05] text-[25px]">{subtitle}</h6>
            <slot />
        </div>
        <div class="basis-2/5">
            {image && <img src={image}>}
        </div>
    </div>
</section>
