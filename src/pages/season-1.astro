---
import Image from '../sections/Image.astro';
import Layout from '../layouts/Layout.astro';

import season1Group from '../assets/images/season-1-group.avif';
import PageHeader from '../sections/PageHeader.astro';

const title = 'Season 1';
const subtitle = 'The Beginning';
const button = {
	text: 'Check out Season 1',
	url: 'https://www.youtube.com/watch?v=L5e5zOam_bQ&list=PLKdBCkUjpzdRlxJK28MGKum5dUPddAV-g'
};
---

<Layout title={`${title} - ${subtitle}`}>
	<PageHeader title={title} subtitle={subtitle} button={button}>
		<p class="text-center font-fredericka">
			Season 1 found eighteen castaways taking on the game for the first time in our first season. The game was two days with the premerge playing out on Day 1 and Merge taking on Day 2.
		</p>
	</PageHeader>
	<Image image={season1Group} />
</Layout>
