const crew: { name: string; title: string; image: ImageMetadata }[] = [
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
	{ name: 'Noah Welker, 18', title: 'Retired Brake Rotor Maker',image: noah },
