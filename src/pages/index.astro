---
import { Image as AstroImage } from 'astro:assets';
import season6Group from '../assets/images/season-6-group.avif';
import ImageGallery from '../sections/ImageGallery.astro';
import Layout from '../layouts/Layout.astro';
import ButtonLink from '../components/ButtonLink.astro';
---

<Layout title="Home">
	<section class="bg-white">
		<div class="flex flex-col items-center justify-center gap-4 max-w-[770px] mx-auto p-6">
			<AstroImage src={season6Group} alt="Season 6 Group" />
			<h2 class="text-[56px] text-center leading-tight text-primary txt-shadow">Welcome to our tribe</h2>
			<p class="text-center font-survivor">The legendary reality television sensation has come to Michigan. For Six seasons, castaways from around the United States have traveled to the tropical backyard and competed in the greatest game this side of the Great Lakes. Check out the legacy on YouTube now!</p>
		</div>
	</section>
	<section class="bg-[#e8e6e6]">
		<div class="flex flex-col items-center justify-center gap-4 max-w-[770px] mx-auto p-6">
			<h2 class="text-[56px] text-center leading-tight font-chelsea">Series Overview</h2>
			<div class="flex sm:flex-row flex-col sm:gap-12 gap-6 flex-wrap justify-center">
				<ButtonLink href="/survivor-gr/dearborn" label="Survivor: Dearborn" type="primary" ariaLabel="Survivor: Dearborn" />
				<ButtonLink href="/survivor-gr/grand-rapids" label="Survivor: Grand Rapids" type="primary" ariaLabel="Survivor: Grand Rapids" />
			</div>
		</div>
	</section>
	<ImageGallery />
</Layout>
